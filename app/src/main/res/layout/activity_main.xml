<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <kz.kd.for_practice.UnderlinedTextView
        android:id="@+id/tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hello There!"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.1" />

    <kz.kd.for_practice.CircledButton
        android:id="@+id/circled_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="General Kenobi"
        app:borderColor="@android:color/black"
        app:borderSize="1dp"
        app:hasBorder="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv"
        app:layout_constraintVertical_bias="0.1"
        app:radius="4dp" />

    <kz.kd.for_practice.TitleWithSubtitleItem
        android:id="@+id/title_with_subtitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/circled_button"
        app:layout_constraintVertical_bias="0.1"
        app:textTitle="You were my brother, Anakin!"
        app:textSubTitle="I hate you!!!"/>

</androidx.constraintlayout.widget.ConstraintLayout>